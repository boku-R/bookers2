      <% if users.exists? %>
        <table class="table">
          <thread>
            <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
          </thread>
          <% users.each do |user| %>
            <tbody>
              <tr>
                <td>
                  <% if user.profile_image.attached? %>
                    <%= image_tag user.profile_image, size: "100x100" %>
                  <% else %>
                    <%= image_tag 'no_image', size: "100x100" %>
                  <% end %>
                </td>
                <td><%= user.name %></td>
                <td>フォロー数：<%= user.followings.count %></td>
                <td>フォロワー数：<%= user.followers.count %></td>
                <td>
                  <%= link_to "Show" ,user_path(user.id) %>
                </td>
              </tr>
            </tbody>
          <% end %>
        </table>
      <% else %>
        <p>ユーザはいません</p>
      <% end %>
