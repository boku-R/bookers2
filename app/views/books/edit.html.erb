<h2>Editing Book</h2>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>

  <p>Title</p>
  <%= f.text_field :title %>

  <p>Opinion</p>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book',class:"btn btn-success" %>
  
  

  <a>
    <%= link_to "Show", book_path(@book.id) %>
    | <%= link_to "Back", books_path %>
  </a>

  <% end %>