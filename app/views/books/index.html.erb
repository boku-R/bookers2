<!--books#createのバリデーションメッセージ-->
<% if @book.errors.any? %>
  <p><%= @book.errors.count %>errors prohibited this obj from being saved:</p>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class ="row">
    <div class ="col-md-3">
      <h1>User info</h1>
        <!--画像-->
        <% if @user.profile_image.attached? %>
          <%= image_tag @user.profile_image, size: "100x100" %>
        <% else %>
          <%= image_tag 'no_image', size: "100x100" %>
        <% end %>

        <table class ="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>Introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>

        <%= link_to "ユーザ情報編集", edit_user_path(current_user.id), class: ' btn btn-success' %>

        <h1>New Book</h1>
        <%= form_with model: @book do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>Opinion</h4>
          <%= f.text_area :body %>
          <%= f.submit 'Create Book', class: "btn btn-success"%>
        <% end %>
    </div>

    <div class = "col-md-8">
      <!--投稿したユーザの画像を表示するところから実装します-->
      <h1>Books</h1>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user.id) do %>
                  <p><%= image_tag book.user.get_profile_image(100,100) %></p>
                <% end %>
              </td>
              <td>
                <%= link_to book.title, book_path(book.id) %>
              </td>
              <td>
                <span><%= book.body %></span>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>




