
<h1>User info</h1>
    <!--画像-->
    <% if @user.profile_image.attached? %>
      <%= image_tag @user.profile_image, size: "100x100" %>
    <% else %>
      <%= image_tag 'no_image', size: "100x100" %>
    <% end %>

    <h4>name</h4>
    <p><%= @user.name %></p>
    <h4>Introduction</h4>
    <p><%= @user.introduction %></p>
    <%= link_to "ユーザ情報編集", edit_user_path(current_user.id), class: ' btn btn-success' %>



<h1>New Book</h1>
  <%= form_with model: @new_book do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book', class: "btn btn-success"%>
  <% end %>

<!--投稿したユーザの画像を表示するところから実装します-->
<h1>Books</h1>
<% @books.each do |book| %>
  <p>Title:</p>
  <span><%= book.title %></span>

  <p>Opinion:</p>
  <span><%= book.body %></span>
<% end %>
