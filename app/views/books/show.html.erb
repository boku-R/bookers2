
<div class="container">
  <div>
  <%= flash[:notice] %>
  </div>
  <div class = "row">
    <div class ="col-md-3">
      <h1>User info</h1>
      <!--画像-->
      <p><%= image_tag @user.get_profile_image(100,100) %></p>

        <table class ="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>Introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>

      <div class ="row">
        <%= link_to edit_user_path(@user.id), class: ' btn btn-outline-secondary btn-block' do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </div>


      <h1>New book</h1>
      <%= form_with model: @book do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book', class: "btn btn-success"%>
      <% end %>
    </div>

    <div class ="col-md-8 offset-md-1">
      <!--showの部分-->
      <!--ユーザの画像を表示するところ-->
      <h2>Book detail</h2>

      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
                <p><%= image_tag @user.get_profile_image(100,100) %></p>
                <p><%= @user.name %></p>
              <% end %>
            </td>
            <td>
              <%= link_to @show_book.title, book_path(@show_book.id) %>
            </td>
            <td>
              <span><%= @show_book.body %></span>
            </td>
            <%if @show_book.user == current_user %>
              <td>
                <!--Editボタン-->
                <%= link_to "Edit", edit_book_path(@show_book.id), class: ' btn btn-success' %>
              </td>
              <td>
                <!--Destroyボタン-->
                <%= link_to "Destroy", book_path(@show_book.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: ' btn btn-danger' %>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>



