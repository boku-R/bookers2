<div class="container">
  <!--books#createのバリデーションメッセージ-->
  <% if @book.errors.any? %>
    <p><%= @book.errors.count %>errors prohibited this obj from being saved:</p>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
        <%= render 'info', user: current_user %>

      <h2>New book</h1>
      <%= render 'books/form', book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <!--user一覧-->
      <!--投稿したユーザの画像を表示するところから実装します-->
      <h1>Users</h1>
        <%= render 'index',users: @users %>
    </div>
  </div>
</div>



