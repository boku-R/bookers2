

<div class="container">
  <div>
  <%= flash[:notice] %>
  </div>
  <div class="row">
    <div class="col-md-3">
      <!--ユーザの情報を表示-->
      <h1>User info</h1>
      <!--画像-->
      <p><%= image_tag @user.get_profile_image(100,100) %></p>

        <table class ="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>Introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>

      <%= link_to "ユーザ情報編集", edit_user_path(current_user.id), class: ' btn btn-success' %>

      <!--新規投稿-->
      <h1>New Book</h1>
      <%= form_with model: @book do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book', class: "btn btn-success"%>
      <% end %>
    </div>

    <dic class="col-md-8">
      <h1>Books</h1>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user.id) do %>
                  <p><%= image_tag book.user.get_profile_image(100,100) %></p>
                <% end %>
              </td>
              <td>
                <%= link_to book.title, book_path(book.id) %>
              </td>
              <td>
                <%= book.body %>
              </td>
            </tr>

          <% end %>
        </tbody>
      </table>
    </dic>
  </div>
</div>