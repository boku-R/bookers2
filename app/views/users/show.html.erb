

<div class="container">
  <div>
  <%= flash[:notice] %>
  </div>
  <div class="row">
    <div class="col-md-3">
      <!--ユーザの情報を表示-->
      <h1>User info</h1>
      <!--画像-->
      <% if @user.profile_image.attached? %>
        <%= image_tag @user.profile_image, size: "100x100" %>
      <% else %>
        <%= image_tag 'no_image', size: "100x100" %>
      <% end %>

        <table class ="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>Introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>

      <div class ="row">
        <%= link_to edit_user_path(@user.id), class: ' btn btn-outline-secondary btn-block' do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </div>


      <!--新規投稿-->
      <h1>New book</h1>
      <%= form_with model: @book do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book', class: "btn btn-success"%>
      <% end %>
    </div>

    <dic class="col-md-8 offset-md-1">
      <h1>Books</h1>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user) do %>
                  <p><%= image_tag book.user.get_profile_image(100,100) %></p>
                <% end %>
              </td>
              <td>
                <%= link_to book.title, book_path(book.id) %>
              </td>
              <td>
                <%= book.body %>
              </td>
              <!--コメント数機能-->
              <td>
                <p>コメント数：<%= book.book_comments.count %></p>
              </td>
            </tr>

          <% end %>
        </tbody>
      </table>
    </dic>
  </div>
</div>