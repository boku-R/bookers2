<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!--<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.9.0/css/all.css">-->
  </head>


  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand p-3" href="/">Bookers</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
            <li class="nav-item">
              <!--<a class="nav-link text-light" href = user_path(current_user.id)>Home</a>-->
              <%= link_to user_path(current_user.id), class: 'nav-link text-light' do %>
                <p><i class="fas fa-home"></i> Home</p>
              <% end %>
            </li>
            <li class="nav-item text-white">
              <%= link_to  users_path, class: 'nav-link text-light' do %>
                <p><i class="fas fa-users"></i> Users</p>
              <% end %>
            </li>
            <li class="nav-item text-white">
              <%= link_to books_path, class: 'nav-link text-light' do %>
                <p><i class="fas fa-book-open"></i> Books</p>
              <% end %>
            </li>
            <li class="nav-item text-white">
              <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-light' do %>
                <p><i class="fas fa-sign-out-alt"></i> Log out</p>
              <% end %>
            </li>
            <% else %>
            <li class="nav-item text-white">
              <%= link_to root_path, class: 'nav-link text-light' do %>
                <p><i class="fas fa-home"></i> Home</p>
              <% end %>
            </li>
            <li class="nav-item text-white">
              <%= link_to  about_path, class: 'nav-link text-light' do%>
                <p><i class="fas fa-link"></i> About</p>
              <% end %>
            </li>
            <li class="nav-item text-white">
              <%= link_to new_user_registration_path, class: 'nav-link text-light' do %>
                <p><i class="fas fa-user-plus"></i> Sign up</p>
              <% end %>
            </li>
            <li class="nav-item text-white">
              <%= link_to new_user_session_path, class: 'nav-link text-light' do %>
                <p><i class="fas fa-sign-in-alt"></i> Log in</p>
              <% end %>
            </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <!--サインアップ成功のフラッシュメッセージ-->
    <!--<p class="notice">< %= notice %></p>-->
    <!--<p class="alert">< %= alert %></p>-->
    <main class="mb-auto">
    <%= yield %>
    </main>
    <footer class="pt-5 pb-4">
      <div class="container">
        <div class="row no-gutters">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
            <!--< %= image_tag('logo-white.png') %>-->
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
