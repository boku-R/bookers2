<header class="shadow-sm">
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand p-3" href="/">Bookers</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                    aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
        <li class="nav-item">
          <!--<a class="nav-link text-light" href = user_path(current_user.id)>Home</a>-->
          <%= link_to user_path(current_user.id), class: 'nav-link text-light' do %>
            <p><i class="fas fa-home"></i> Home</p>
          <% end %>
        </li>
        <li class="nav-item text-white">
          <%= link_to  users_path, class: 'nav-link text-light' do %>
            <p><i class="fas fa-users"></i> Users</p>
          <% end %>
        </li>
        <li class="nav-item text-white">
          <%= link_to books_path, class: 'nav-link text-light' do %>
            <p><i class="fas fa-book-open"></i> Books</p>
          <% end %>
        </li>
        <li class="nav-item text-white">
          <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-light' do %>
            <p><i class="fas fa-sign-out-alt"></i> Log out</p>
          <% end %>
        </li>
        <% else %>
        <li class="nav-item text-white">
          <%= link_to root_path, class: 'nav-link text-light' do %>
            <p><i class="fas fa-home"></i> Home</p>
          <% end %>
        </li>
        <li class="nav-item text-white">
          <%= link_to  about_path, class: 'nav-link text-light' do%>
            <p><i class="fas fa-link"></i> About</p>
          <% end %>
        </li>
        <li class="nav-item text-white">
          <%= link_to new_user_registration_path, class: 'nav-link text-light' do %>
            <p><i class="fas fa-user-plus"></i> Sign up</p>
          <% end %>
        </li>
        <li class="nav-item text-white">
          <%= link_to new_user_session_path, class: 'nav-link text-light' do %>
            <p><i class="fas fa-sign-in-alt"></i> Log in</p>
          <% end %>
        </li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>


<% if user_signed_in? %>
  <!--検索機能-->
  <%= form_with url: search_path, local: true, method: :get do |f| %>
    <a><%= f.text_field :word %></a>
    <a><%= f.select :range, options_for_select([['User'],['Book']]) %></a>
    <a><%= f.select :search, options_for_select([["完全一致","perfect_match"],["前方一致","forward_match"],["後方一致","background_match"],["部分一致","partial_match"]]) %></a>
    <a><%= f.submit "検索", class: "btn btn-primary" %></a>
  <% end %>
  <!--タグ検索機能-->
  <%= form_with url: search_tag_path, local: true, method: :get do |f| %>
    <a><%= f.text_field :keyword %></a>
    <a><%= f.submit "タグ検索", class: "btn btn-primary" %></a>
  <% end %>
<% end %>